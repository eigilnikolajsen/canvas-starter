{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"//#format": {
			"cache": false
		},
		"//#lint": {
			"cache": false
		},
		"//#reinstall": {
			"cache": false
		},
		"//#update:deps": {
			"cache": false,
			"interactive": true
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"preview": {
			"dependsOn": ["^preview", "build"],
			"persistent": true
		},
		"check": {
			"dependsOn": ["^check", "//#format", "//#lint"]
		},
		"deploy": {
			"dependsOn": ["^deploy", "check"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"netlify": {
			"cache": false,
			"interactive": true
		}
	},
	"ui": "tui"
}
